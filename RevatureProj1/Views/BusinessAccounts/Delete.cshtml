@model Banking.Models.BusinessAccount

@{
    ViewData["Title"] = "Delete";
}

<h1>Close Account</h1>

<h3>Are you sure you want to close this Business Account?</h3>
<h4>In order to close account balance must be $0.00 and Overdraft Facility must be $0.00</h4>
<div>
    <h4>Business Account Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Balance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Overdraft)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Overdraft)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsOpen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsOpen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InterestRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InterestRate)
        </dd>
 
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Close Account" class="btn btn-danger"
              @{ 
                   if(Model.Balance > 0 || Model.Overdraft > 0 ||Model.IsOpen == false)
                   {
                        @:disabled="disabled" 
                   }
               }
               
               /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
