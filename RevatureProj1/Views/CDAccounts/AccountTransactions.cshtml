
@{
    ViewData["Title"] = "AccountTransactions";
}

<h1>List of Transactions</h1>

@using (Html.BeginForm("AccountTransactions","CDAccounts"))
{
<div class="form-group">
    <span>Start Time</span>
    <span class="col-xs-3">
        <input type="date" name="start" />
    </span>
    <span>End Time</span>
    <span class="col-xs-3">
        <input type="date" name="end" />
    </span>
    <span class="form-group">
        <input type="submit" value="Submit Filter" class="btn btn-primary" />
    </span>
    <span class="form-group">
        <button type="submit" name="sort10" value="yes" class="btn btn-secondary">Get Last 10 Transactions</button>
    </span>

</div>
}
@*<form asp-action="AccountsTransactions">
</form>*@
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                <p>Account Number</p>
            </th>
            <th>
                <p>Transaction Type</p>
            </th>
            <th>
                <p>Transaction Amount</p>
            </th>
            <th>
                <p>Date/Time Transaction</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="table-light">
                <td>
                    @item.AccountNum
                </td>
                <td>
                    @item.Type
                </td>
                <td>
                    @item.Amount
                </td>
                <td>
                    @item.TimeTransaction
                </td>
            </tr>
        }
    </tbody>

    <a asp-action="Index">Back to Checking Accounts</a>

</table>
